{
    "title": "Command + i/j/k/l to arrow keys, Emacs excluded",
    "rules": [
	{
	    "description": "Command + i/j/k/l to arrow keys, Emacs excluded",
	    "manipulators": [
		{
		    "conditions": [
			{
			    "type": "frontmost_application_unless",
			    "bundle_identifiers": [     "^org\\.gnu\\.Emacs$" ]
			}
		    ],
		    "from": {
			"key_code": "j",
			"modifiers": {
			    "mandatory": [
				"command"
			    ],
			    "optional": [
				"any"
			    ]
			}
		    },
		    "to": [
			{
			    "key_code": "left_arrow"
			}
		    ],
		    "type": "basic"
		},
		{
		    "conditions": [
			{
			    "type": "frontmost_application_unless",
			    "bundle_identifiers": [      "^org\\.gnu\\.Emacs$" ]
			}
		    ],
		    "from": {
			"key_code": "k",
			"modifiers": {
			    "mandatory": [
				"command"
			    ],
			    "optional": [
				"any"
			    ]
			}
		    },
		    "to": [
			{
			    "key_code": "down_arrow"
			}
		    ],
		    "type": "basic"
		},
		{
		    "conditions": [
			{
			    "type": "frontmost_application_unless",
			    "bundle_identifiers": [      "^org\\.gnu\\.Emacs$" ]
			}
		    ],
		    "from": {
			"key_code": "i",
			"modifiers": {
			    "mandatory": [
				"command"
			    ],
			    "optional": [
				"any"
			    ]
			}
		    },
		    "to": [
			{
			    "key_code": "up_arrow"
			}
		    ],
		    "type": "basic"
		},
		{
		    "conditions": [
			{
			    "type": "frontmost_application_unless",
			    "bundle_identifiers": [      "^org\\.gnu\\.Emacs$" ]
			}
		    ],
		    "from": {
			"key_code": "l",
			"modifiers": {
			    "mandatory": [
				"command"
			    ],
			    "optional": [
				"any"
			    ]
			}
		    },
		    "to": [
			{
			    "key_code": "right_arrow"
			}
		    ],
			    "type": "basic"
		}
	    ]
	}

    ]
}
